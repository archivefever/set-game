<!DOCTYPE html>
<html>
  <head>
    <title>SetGame</title>
    <%= csrf_meta_tags %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <div class="nav">
      <nav>
        <% if current_user %>
          Signed in as <a href="/players/<%= current_user.id %>"><%= current_user.username %></a> | <%= link_to "Logout", '/logout' %>
        <% else %>
          <%= link_to 'Login', '/login' %> | <%= link_to 'Register', '/players/new' %>
        <% end %>
        | <%= link_to 'Main', '/' %>
      </nav>
    </div>
    <%= yield %>
  </body>
</html>
