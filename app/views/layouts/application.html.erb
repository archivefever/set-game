<!DOCTYPE html>
<html>
  <head>
    <title>SetGame</title>
    <%= csrf_meta_tags %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag 'application' %>

  </head>

  <body>
    <div class="nav">
      <nav>
        <% if player_signed_in? %>
          Signed in as <a href="/players/<%= current_player.id %>"><%= current_player.username %></a> | <%= link_to "Logout", destroy_player_session_path, method: :delete %>
        <% else %>
          <%= link_to 'Login', new_player_session_path %> | <%= link_to 'Register', new_player_registration_path %>
        <% end %>
        | <%= link_to 'Main', '/' %>
      </nav>
    </div>
    <div id="container">
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
